<style>
    .swiper{
    display:flex;
    width:100% !important;
    height:250px !important;
    margin-left:1.5rem !important;
  }
</style>

<div class="Slideshow-2-{{ section.id }}-padding gradient color-{{ section.settings.section_color_scheme }}">
<div class="swiper">
    <div class="swiper-wrapper">
        {%- for block in section.blocks -%}
            {% case block.type %}
                {% when 'image' %}
                    <div class="swiper-slide">
                        <img src="{{ block.settings.image | image_url: width: '250px' }}" alt="Image" class="image-with-text__image" width="250px" height="250px">
                    </div>
            {% endcase %}
        {%- endfor -%}
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>
    <!-- Add Navigation -->
    <div class="swiper-next-button"></div>
</div>
</div>

<script>
    var swiper = new Swiper(".swiper", {
        slidesPerView: 5,
        spaceBetween: 10,
        freeMode: true,
        loop: true,
        navigation: {
            nextEl: ".swiper-next-button",
        },
        pagination: {
            el: ".swiper-pagination",
            clickable: true,
        },
    });
</script>


{% schema %}
  {
    "name": "Section name",
    "settings": [
      {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
    ],
     "blocks": [

        {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
     },
       
     ],
    "presets":[{
    "name":"Custom-Slideshow-2"
    }
  ]
  }
{% endschema %}